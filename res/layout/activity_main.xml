<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
		
		<LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
        
        	<TextView
            	android:id="@+id/textViewMoney"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="0.00"
            	android:text="Money:" 
            />

        	<EditText
            	android:id="@+id/editTextInputMoney"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="1.00"
            	android:ems="10"
            	android:inputType="numberDecimal" 
            />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
        	
		    <TextView
		        android:id="@+id/textViewSelectPayer"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Payer:" />
		    
		    <Spinner 
		    	android:id="@+id/spinnerSleectPayer"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1.00" />
		</LinearLayout>

		<LinearLayout
		    android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
		    
        <Button
            android:id="@+id/btnSelectAttendPersons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Attend Persons" />
        
        <EditText 
            android:id="@+id/editTextAttendPersons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:editable="false"
            android:hint="All Attend Persons"/>
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
        
          	<TextView
            	android:id="@+id/textViewPlace"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="0.00"
            	android:text="Place:" />  
            	
        </LinearLayout>
        
		<LinearLayout
		    android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >
        
          	<TextView
            	android:id="@+id/textViewPayDate"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="0.00"
            	android:text="Date:" />

          	<DatePicker
          	    android:id="@+id/datePickerPayDate"
          	    android:layout_width="fill_parent"
          	    android:layout_height="wrap_content"
          	    android:calendarViewShown="false" />

       	</LinearLayout>
        
        <LinearLayout
		    android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
        
          	<TextView
            	android:id="@+id/textViewPayDescription"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="0.00"
            	android:text="Description:" />  
            	
          	<EditText 
            	android:id="@+id/editTextPayDescription"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:maxLines="5"
            	android:editable="true"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btnSavePayEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|top" >

        </Button>

</LinearLayout>
